@page "/register"
@inject AuthService AuthService
@inject NavigationManager Nav

<MudText Typo="Typo.h5" Class="mb-4">Register</MudText>

<MudTextField @bind-Value="email"
              Label="Email"
              FullWidth="true" />
<MudTextField @bind-Value="password"
              Label="Password"
              InputType="InputType.Password"
              FullWidth="true" />
<MudTextField @bind-Value="confirmPassword"
              Label="Confirm Password"
              InputType="InputType.Password"
              FullWidth="true" />

<MudText Color="Color.Error" Class="mt-2">@errorMessage</MudText>

<MudButton Variant="Variant.Filled"
           OnClick="Register"
           Class="mt-4">
    Register
</MudButton>

@code {
    private string email, password, confirmPassword, errorMessage;

    private async Task Register()
    {
        errorMessage = "";
        if (password != confirmPassword)
        {
            errorMessage = "The passwords don't match!";
            return;
        }

        if (await AuthService.Register(email, password))
            Nav.NavigateTo("/login");
        else
            errorMessage = "Registration error.";
    }
}
